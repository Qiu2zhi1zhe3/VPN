{
  "log": {
    "disabled": true,
    "level": "debug",
    "output": "./run/logs",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "googledns",
        "address": "https://8.8.8.8/dns-query",
        "detour": "Proxy"
      },
      {
        "tag": "block",
        "address": "rcode://success"
      }
    ],
    "rules": [
      {
        "geosite": "ads",
        "server": "block",
        "disable_cache": true
      }
    ],  
    "final": "googledns",
    "strategy": "ipv4_only",
    "disable_cache": false,
    "disable_expire": false
  },
  "inbounds": [
    {	
      "tag": "tun",
      "type": "tun",
      "interface_name": "tun0",
      "inet4_address": "28.0.0.1/8",
      "inet6_address": "fdfe:dcba:9876::1/126",
      "mtu": 30000,
      "auto_route": true,
      "strict_route": true,
      "stack": "system",
      "sniff": true,
      "sniff_override_destination": true
    }
  ],
  "providers": [
    {
      "tag": "❀",
      "url": "link sub",
      "interval": "24h",
      "cache_file": "./run/sub.txt",
      "download_detour": "Proxy"
    }
  ],
  "outbounds": [
    {
      "tag": "Direct",
      "type": "direct"
    },
    {
      "tag": "Block",
      "type": "block"
    },
    {
      "tag": "dns",
      "type": "dns"
    },
    {
      "tag": "Proxy",
      "type": "selector",
      "providers": [
      "❀"
      ],
      "outbounds": [
        "Direct"
      ]
    },
    {
      "tag": "Trong Nước",
      "type": "selector",
      "providers": [
      "❀"
      ],
      "outbounds": [
        "Direct"
      ]
    },
    {
      "tag": "Chặn QC",
      "type": "selector",
      "outbounds": [
        "Proxy",
        "Block"
      ],
      "default": "Block"
    }
  ],
  "route": {
    "geosite": {
		"path": "./run/geosite_vn.db"
    },
    "geoip": {
		"path": "./run/geoip_vn.db"
    },
    "rules": [
      {
        "port": 53,
        "outbound": "dns"
      },
      {
        "geosite": "ads",
        "outbound": "Chặn QC"
      },
      {
	"geoip": "vn",
        "outbound": "Trong Nước"
      },
      {
        "ip_version": 6,
        "outbound": "Block"
      }
    ],
    "final": "Proxy",
    "auto_detect_interface": true
  },
  "experimental": {
    "clash_api": {
      "external_controller": "0.0.0.0:9090",
      "external_ui": "Dashboard",
      "store_selected": true,
      "cache_file": "./Dashboard/cache.db"
    }
  }
}
